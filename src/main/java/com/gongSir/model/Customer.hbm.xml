<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.gongSir.model.Customer" table="customer" schema="hibernate">
        <id name="userId" column="user_id"/>
        <property name="userPass" column="user_pass"/>
        <property name="realName" column="real_name"/>
        <property name="userPhone" column="user_phone"/>
        <property name="userAddr" column="user_addr"/>
    </class>
</hibernate-mapping>